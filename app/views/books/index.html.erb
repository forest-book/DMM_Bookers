<h1>Books</h1>


<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Show', book_path(book.id) %></td>
            </tr>
        <% end %>
    </tbody>
</table>



